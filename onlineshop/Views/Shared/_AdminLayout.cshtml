<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/onlineshop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&amp;display=swap" rel="stylesheet" />


</head>
<body>
    <div class="main-contaier">
        <div class="sidenav" style="background-color:#002e63;">
            <a class="navigation-link" href="/Home/Index"><i class="bi bi-house-door"></i> Home</a>
            <a class="navigation-link" href="/Category/Index"><i class="bi bi-list-task"></i> Categories</a>
            <a class="navigation-link" href="/Product/Index"><i class="fab fa-product-hunt"></i> Products</a>
            <a class="navigation-link" href="/User/Index"><i class="bi bi-person-circle"></i> Users</a>
        </div>
        <div class="right-panel">
            <nav class="nav-bar" style="background-color:#0067a5;">
                <div class="nav-heading">Welcome @User.Identity?.Name</div>
                <div class="nav-actions">
                    @* <a href="/Identity/Account/Manage/Index" class="navigation-link"><i class="bi bi-gear"></i> Manage account</a> *@
                    <form asp-controller="User" asp-action="Logout" method="get">
                        <button type="submit" class="navigation-link">
                            <i class="bi bi-box-arrow-left"></i> Logout
                        </button>
                    </form>
                </div>
            </nav>
            <div class="content">
                <div class="my-2">
                </div>
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
