@model onlineshop.Models.Update_UserVM

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="CurrentUser.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentUser.FullName" class="control-label"></label>
                <input asp-for="CurrentUser.FullName" class="form-control" />
                <span asp-validation-for="CurrentUser.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentUser.Address" class="control-label"></label>
                <input asp-for="CurrentUser.Address" class="form-control" />
                <span asp-validation-for="CurrentUser.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentUser.Age" class="control-label"></label>
                <input asp-for="CurrentUser.Age" class="form-control" />
                <span asp-validation-for="CurrentUser.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentUser.PhoneNumber" class="control-label"></label>
                <input asp-for="CurrentUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="CurrentUser.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

